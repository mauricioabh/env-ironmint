{
  "name": "env-ironmint",
  "version": "1.0.0",
  "description": "CLI tool to validate .env files, detect security issues, and prevent production disasters",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "env-ironmint": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage",
    "lint": "echo 'Linting disabled for now'",
    "lint:fix": "echo 'Linting disabled for now'",
    "prepublishOnly": "npm run build && npm run test:ci"
  },
  "keywords": [
    "env",
    "environment",
    "variables",
    "validation",
    "cli",
    "dotenv",
    "security",
    "typescript",
    "nodejs",
    "npm",
    "development",
    "devops",
    "ci-cd",
    "environment-variables",
    "env-validation",
    "env-checker",
    "env-validator",
    "security-validation",
    "production-safety",
    "env-files"
  ],
  "author": {
    "name": "Mauricio Barragan",
    "email": "mauricioabh@github.com",
    "url": "https://github.com/mauricioabh"
  },
  "license": "MIT",
  "homepage": "https://github.com/mauricioabh/env-ironmint#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/mauricioabh/env-ironmint.git"
  },
  "bugs": {
    "url": "https://github.com/mauricioabh/env-ironmint/issues"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/mauricioabh"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
